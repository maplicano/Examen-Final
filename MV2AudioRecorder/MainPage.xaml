<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MV2AudioRecorder.MainPage"
             Title="                      Examen Final">

    <ScrollView>
        <StackLayout BackgroundColor="#eafdf4">

            <Entry Placeholder="Descripcion:" Margin="0,0,0,30" x:Name="txtdescripcion" BackgroundColor="#d84755"/>
            <Grid Margin="20,0,20,0">
                <Button Text="Grabar Audio" Grid.Column="0" x:Name="btnGrabar" Clicked="btnGrabar_Clicked" TextTransform="None" BackgroundColor="#d84755" TextColor="Black" CornerRadius="8" FontSize="16" Margin="30,10,30,40" />
                <Button Text="Detener Audio" Grid.Column="1" x:Name="btnDetener" Clicked="btnDetener_Clicked"  TextTransform="None" BackgroundColor="#d84755" TextColor="Black" CornerRadius="8" FontSize="16" Margin="30,10,30,40"/>
                <Button Text="Lista de Audios" Grid.Row="1" Grid.ColumnSpan="2" x:Name="btnlistarAudio" Clicked="btnlistarAudio_Clicked" TextTransform="None" BackgroundColor="#d84755" TextColor="Black" CornerRadius="8" FontSize="16" Margin="90,30,90,40"/>
            </Grid>
    </StackLayout>
    </ScrollView>
</ContentPage>
